<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/dialog_cancelable_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dialog Cancelable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dialog_with_action_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dialog with actions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_cancelable_button" />

    <Button
        android:id="@+id/dialog_custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dialog custom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_with_action_button" />

</androidx.constraintlayout.widget.ConstraintLayout>